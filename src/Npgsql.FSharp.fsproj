<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <Description>Thin functional F# layer around Npgsql, the PostgreSQL database driver.</Description>
    <PackageProjectUrl>https://github.com/Zaid-Ajaj/Npgsql.FSharp</PackageProjectUrl>
    <RepositoryUrl>https://github.com/Zaid-Ajaj/Npgsql.FSharp.git</RepositoryUrl>
    <PackageLicenseUrl>https://github.com/Zaid-Ajaj/Npgsql.FSharp/blob/master/LICENSE</PackageLicenseUrl>
    <PackageIconUrl></PackageIconUrl>
    <PackageTags>fsharp;postgres;sql;ngpsql</PackageTags>
    <Authors>Zaid Ajaj</Authors>
    <Version>3.12.0</Version>
    <TargetFrameworks>netstandard2.0;netstandard2.1;netcoreapp3.1</TargetFrameworks>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
    <LangVersion>latest</LangVersion>
    <PackageReleaseNotes>
      - Extend the execution model to allow running SQL commands against an existing transaction
      - Update Npgsql to latest v5.0.0
      - Introduce Npgsql.FSharp.Tasks for task based SQL commands
    </PackageReleaseNotes>
  </PropertyGroup>
  <ItemGroup>
    <Compile Include="OptionWorkflow.fs" />
    <Compile Include="Common.fs" />
    <Compile Include="PostgresUri.fs" />
    <Compile Include="Npgsql.FSharp.fs" />
    <Compile Include="Npgsql.FSharp.Tasks.fs" />
  </ItemGroup>

  <Import Project="..\.paket\Paket.Restore.targets" />
</Project>
